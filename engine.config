# Game Engine Configuration File
# Конфигурация параметров движка

[Engine]
version = 1.0
app_name = Game Engine Editor
author = Game Engine Team

[Display]
# Размер окна по умолчанию
default_width = 1600
default_height = 1000

# Предпочитаемое качество графики
graphics_quality = high  # low, medium, high, ultra

# FPS цель
target_fps = 60

# Антиалиасинг
antialiasing = true
msaa_samples = 4  # 2, 4, 8, 16

[Editor]
# Автосохранение
auto_save = true
auto_save_interval = 300  # секунды

# Сетка редактора
grid_size = 20
show_grid = true

# Масштаб по умолчанию
default_zoom = 1.0

# История отмен
undo_history_size = 50

[Project]
# Путь к проектам по умолчанию
default_projects_path = projects/

# Путь к ассетам
assets_path = assets/

# Путь к скриптам
scripts_path = scripts/

[Physics]
# Гравитация
gravity = 9.81

# Размер шага симуляции
time_step = 0.016  # ~60 FPS

# Максимальное количество тел в симуляции
max_bodies = 1000

[Audio]
# Громкость по умолчанию
master_volume = 1.0
music_volume = 0.7
sfx_volume = 0.8

# Максимальное количество одновременных звуков
max_sounds = 32

[Performance]
# Ограничение частиц
max_particles = 10000

# Расстояние отсечения для объектов
culling_distance = 1000

# Использовать многопоточность
threading_enabled = true
thread_count = 4

[Debug]
# Режим отладки
debug_mode = false

# Профилирование
profiling_enabled = false

# Логирование
log_level = INFO  # DEBUG, INFO, WARNING, ERROR

# Выводить информацию FPS
show_fps = true

# Показывать эффект отладки на холсте
show_debug_overlay = false

[Export]
# Формат экспорта по умолчанию
default_export_format = standalone  # standalone, web, mobile

# Оптимизировать при экспорте
optimize_on_export = true

# Сжимать ассеты
compress_assets = true

# Удалить неиспользуемые ресурсы
remove_unused_assets = true

[Theme]
# Текущая тема
current_theme = dark  # dark, light, custom

# Цвета интерфейса (для тёмной темы)
background_color = #1a1a1a
foreground_color = #ffffff
accent_color = #4CAF50
warning_color = #ff9800
error_color = #f44336

# Шрифт
font_family = Segoe UI
font_size = 10

[Keyboard]
# Горячие клавиши
undo = Ctrl+Z
redo = Ctrl+Y
save = Ctrl+S
new_project = Ctrl+N
open_project = Ctrl+O
delete_object = Delete
duplicate_object = Ctrl+D
zoom_in = Ctrl+Plus
zoom_out = Ctrl+-

[Scripting]
# Язык скриптов по умолчанию
script_language = python  # python, csharp

# Проверять синтаксис при сохранении
check_syntax_on_save = true

# Форматировать код при сохранении
format_on_save = true

[AssetManagement]
# Автоматически импортировать ассеты при добавлении в папку
auto_import_assets = true

# Кешировать текстуры
cache_textures = true

# Кешировать модели
cache_models = true

# Максимальный размер кеша (MB)
max_cache_size = 500

[Rendering]
# Качество теней
shadow_quality = high  # low, medium, high

# Отражения
reflections_enabled = true

# Нормал маппинг
normal_mapping_enabled = true

# Параллакс маппинг
parallax_mapping_enabled = false

[Shortcuts]
# Дополнительные пользовательские комбинации
play_scene = F5
pause_scene = F6
stop_scene = Shift+F5

# Примечание: строки начинающиеся с # - комментарии
# Не удаляйте не зная что делаете!
